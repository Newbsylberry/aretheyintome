<div class="field">
    <%= f.hidden_field :question_id, :value=>params[:question_id] %>
    <%= f.label :content, "Option:" %>
    <%= f.text_area :content, :rows => 3 %>
    <%= f.label :value, "Value (between 0-1)" %>
    <%= f.text_field :value, value: number_with_precision(f.object.value, precision: 2) %>
    <%#= f.check_box :_destroy %>
    <%#= f.label :_destroy, "Remove Option" %>
</div>		   	  
